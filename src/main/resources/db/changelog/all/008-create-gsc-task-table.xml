<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="001-create-group_status_change_task-table" author="georgii">
        <createTable tableName="group_status_change_task">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="group_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="new_status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="002-add-fk-gsc-task" author="georgii">
        <addForeignKeyConstraint
                baseTableName="group_status_change_task"
                baseColumnNames="id"
                referencedTableName="task"
                referencedColumnNames="id"
                constraintName="fk_gsc_task"/>
    </changeSet>

</databaseChangeLog>
