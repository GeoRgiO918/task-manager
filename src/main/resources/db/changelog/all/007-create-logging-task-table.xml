<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="001-create-logging-task-table" author="georgii">
        <createTable tableName="logging_task">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
          <column name="log_message" type="VARCHAR(1000)"/>
        </createTable>
    </changeSet>

    <changeSet id="002-add-fk-logging-task" author="georgii">
        <addForeignKeyConstraint
                baseTableName="logging_task"
                baseColumnNames="id"
                referencedTableName="task"
                referencedColumnNames="id"
                constraintName="fk_logging_task"/>
    </changeSet>

</databaseChangeLog>
